{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "prepare": "husky install",
        "lint": "concurrently --kill-others-on-fail 'npm:lint:check:*'",
        "lint:check:prettier": "prettier -c '**/*.php' 'resources/**/*.{vue,js}'",
        "lint:check:stylelint": "stylelint 'resources/**/*.css'",
        "lint:check:phplint": "./vendor/bin/phplint",
        "lint:fix": "concurrently 'npm:lint:fix:*'",
        "lint:fix:prettier": "prettier --write '**/*.php' 'resources/**/*.{vue,js}'",
        "lint:fix:stylelint": "stylelint --fix 'resources/**/*.css'"
    },
    "devDependencies": {
        "@inertiajs/inertia": "^0.8.4",
        "@inertiajs/inertia-vue3": "^0.3.5",
        "@inertiajs/progress": "^0.2.4",
        "@prettier/plugin-php": "^0.16.2",
        "@tailwindcss/forms": "^0.2.1",
        "@tailwindcss/typography": "^0.3.0",
        "@vue/compiler-sfc": "^3.0.5",
        "axios": "^0.21",
        "concurrently": "^6.1.0",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14",
        "postcss-import": "^12.0.1",
        "prettier": "^2.3.0",
        "stylelint": "^13.13.1",
        "stylelint-config-standard": "^22.0.0",
        "tailwindcss": "^2.0.1",
        "vue": "^3.0.5",
        "vue-loader": "^16.1.2"
    }
}

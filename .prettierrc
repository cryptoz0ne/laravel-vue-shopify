{
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": "**/*.json",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "**/*.php",
      "options": {
        "tabWidth": 4,
        "semi": true
      }
    },
    {
      "files": "**/*.yml",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
